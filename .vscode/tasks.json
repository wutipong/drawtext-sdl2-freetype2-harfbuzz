{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "shell: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "`pkg-config",
                "sdl2",
                "freetype2",
                "--cflags`",
                "`pkg-config",
                "sdl2",
                "freetype2",
                "--libs`"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "shell: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "`pkg-config",
                "sdl2",
                "freetype2",
                "harfbuzz",
                "--cflags`",
                "`pkg-config",
                "sdl2",
                "freetype2",
                "harfbuzz",
                "--libs`"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}